<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:elevation="6dp"
    android:focusable="true"
    android:foreground="@drawable/ripple_effect"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/item_image_hr"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:background="@drawable/rounded_rectangle_for_search"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_noun_heart_normal" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tvRating_hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.6 (13)"
                app:drawableStartCompat="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/tvTitle_hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Entire Villa - Bengaluru"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvSubTitle_hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Styleish 2 bed villa in bengaluru close to airport"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPrice_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250"
                    android:textColor="@color/graytextblack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPriceForWhat_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=" / night"
                    android:textColor="@color/text_color_dark"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/addToWishList_hr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:src="@drawable/ic_noun_heart_normal" />

    </LinearLayout>

</androidx.cardview.widget.CardView>